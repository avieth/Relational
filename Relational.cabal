name:                Relational
version:             0.1.0.0
synopsis:            Describe Haskell datatypes as relations
-- description:         
homepage:            https://github.com/avieth/Relational/
license:             BSD3
license-file:        LICENSE
author:              Alexander Vieth
maintainer:          aovieth@gmail.com
-- copyright:           
category:            Data
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library

  ghc-options:       

  exposed-modules:     Data.Relational
                     , Data.Relational.HasConstraint
                     , Data.Relational.Types
                     , Data.Relational.Contains
                     , Data.Relational.Condition
                     , Data.Relational.Project
                     , Data.Relational.Schema
                     , Data.Relational.Field
                     , Data.Relational.Column
                     , Data.Relational.Row
                     , Data.Relational.Table
                     , Data.Relational.Database
                     , Data.Relational.Select
                     , Data.Relational.Insert
                     , Data.Relational.Delete
                     , Data.Relational.Update
                     , Data.Relational.Relation

  -- other-modules:       
  other-extensions:    AutoDeriveTypeable
                     , TypeFamilies
                     , ScopedTypeVariables
                     , MultiParamTypeClasses
                     , FlexibleInstances
                     , FlexibleContexts
                     , GADTs
                     , DataKinds
                     , PolyKinds
                     , KindSignatures
                     , TypeOperators
                     , UndecidableInstances
                     , OverlappingInstances
                     , ConstraintKinds
                     , GeneralizedNewtypeDeriving
                     , DeriveFunctor
                     , RankNTypes

  build-depends:       base >=4.7 && <4.8

  -- hs-source-dirs:      
  default-language:    Haskell2010
